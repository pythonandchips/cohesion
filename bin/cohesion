#!/usr/bin/env ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'cohesion'

args = ARGV.dup
ARGV.clear

failures = Cohesion::Check.site(args[0])

if failures.count == 0
  exit(true)
else
  exit(false)
end



